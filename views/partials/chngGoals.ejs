<!-- A basic modal dialog with title, body and one button to close -->
<div class="h-auto p-4 mx-2 text-left bg-white rounded shadow-xl md:max-w-xl md:p-6 lg:p-8 md:mx-0" @click.away="goal = false">
    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
        <h3 class="text-lg font-medium leading-6 text-gray-900">
            Change Weekly Goals
        </h3>

        <div class="mt-5 mb-4 sm:mt-6">
            <form class="flex flex-col space-y-4" method="post" action="/setGoals">
            <input class="hidden-date" type="hidden" name="date">
            <input class="p-2 mt-5 mb-4" type="text" placeholder="Weight" name="weight">
            <input class="p-2 mt-5 mb-4" type="text" placeholder="Calories" name="calories">
            <input class="p-2 mt-5 mb-4" type="text" placeholder="Workouts" name="workouts">
            <input class="p-2 mt-5 mb-4" type="text" placeholder="Cardio" name="cardio">
            <button class="text-multi-500 hover:bg-blue-500 hover:text-white rounded mt-5 p-2 shadow-sm" type="submit">Set Goals</button> 
            </form>
        
        </div>
    </div>

    <!-- One big close button.  --->
    <div class="mt-5 sm:mt-6">
        <span class="flex w-full rounded-md shadow-sm">
            <button @click="goal = false" class="inline-flex justify-center w-full px-4 py-2 rounded text-multi-500 hover:bg-blue-500 hover:text-white">
            Close
            </button>
        </span>
    </div>

</div>